<div class="col-lg-12">
    {% if subcategories is defined and response.tip != false and produse|length == 0 %}
        {% for subcategory in subcategories %}
            <div class="panel panel-default">
                <div class="panel-heading">{{ subcategory.nume }}</div>
            </div>
        {% endfor %}
        {% if subcategories|length == 0 %}
            <div class="panel panel-warning">
                <div class="panel-heading">Ne pare rau. Nu am gasit produse in aceasta categorie.</div>
            </div>
        {% endif %}
    {% elseif produse|length > 0 %}
        {% for produs in produse %}
            <div class="col-lg-4">
                <div class="panel panel-info">
                    <div class="panel-heading">{{ produs.produs.nume }}</div>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            {% if produs.produs.pretVechi %}
                                <del class="label label-danger">{{ produs.produs.pretVechi }}</del>
                            {% endif %}
                            {{ produs.produs.pret }} ron

                        </div>
                        <div class="col-lg-12">
                            {% if produs.produs.atribute|length > 0 %}
                                {% for atribut in produs.produs.atribute %}
                                    <div class="col-lg-8">{{ atribut.nume }}</div>
                                    <div class="col-lg-4">{{ atribut.valoare }}</div>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-5">
                                <input min="0" max="20" type="number" class="form-control add-to-cart-input" value="1" />
                            </div>
                            <div class="col-lg-4">
                                <button class="btn btn-sm btn-success add-to-cart-btn">Adauga in cos</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        {% endfor %}
    {% endif %}

</div>